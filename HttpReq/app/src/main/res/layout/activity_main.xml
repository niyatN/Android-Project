<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/index"
    tools:context="com.example.niyat.httpreq.MainActivity">


    <EditText
        android:id="@+id/regNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:ems="10"
        android:hint="eg. 1234"
        android:inputType="numberSigned"
        android:textAlignment="center" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="103dp"
        android:text="Get Response"
        android:alpha="0.5"
        android:background="#FFFFFF"
        android:layout_alignEnd="@+id/regNo"
        android:layout_alignStart="@+id/regNo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text=" Enter your last 4 digit of Reg. no."
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textColor="#ff0213"
        android:alpha="0.6"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_above="@+id/submit"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="66dp" />

    <TextView
        android:id="@+id/macId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regNo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
